package com.ccadllc.firebird.dss.server.realtime.external.route.manager.impl;

/**
 * Notifies the {@link RouteManager} of events.
 */
public interface RouteEstablisherNotifier
{
    /**
     * Notifies the route establisher that a session has been closed so that the port can be released for reuse.
     */
    void notifyRouteManagerThatSessionClosed(final int port);
}
