package com.ccadllc.firebird.dss.server.realtime.external.route.manager.impl.management;

/**
 * Interface describing the JMX instrumented data for Mpeg2 packets inserted in a route.
 */
public interface Mpeg2PacketStatisticsMXBean
{
    /**
     * @return the number of Mpeg2 packets inserted to the next packet filter.
     */
    Long getPacketsInserted();

    /**
     * @return the number of Mpeg2 packets rejected by the next packet filter.
     */
    Long getPacketsRejected();

    /**
     * Reset all counters to zero.
     */
    void resetCounters();
}
